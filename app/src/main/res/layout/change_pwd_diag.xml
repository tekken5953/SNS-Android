<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/change_pwd_title_tv"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/gmarket_sans_bold"
        android:gravity="start"
        android:text="비밀번호 변경"
        android:textColor="@color/blue"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/change_pwd_cancel_iv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/change_pwd_title_tv"
        android:src="@drawable/cancel_iv"
        app:tint="@color/blue" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/change_pwd_textInputLayout1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_pwd_title_tv"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="현재 비밀번호"
        app:hintTextColor="@color/blue"
        app:boxStrokeColor="@color/blue"
        app:counterEnabled="true"
        app:counterMaxLength="12"
        app:startIconDrawable="@drawable/password"
        app:errorEnabled="true"
        app:errorTextColor="@color/red"
        app:helperTextEnabled="false"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/change_pwd_textInputEditText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLength="13"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/change_pwd_textInputLayout2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_pwd_textInputLayout1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="새로운 비밀번호"
        app:hintTextColor="@color/blue"
        app:boxStrokeColor="@color/blue"
        app:counterEnabled="true"
        app:counterMaxLength="12"
        app:startIconDrawable="@drawable/password"
        app:errorEnabled="true"
        app:errorTextColor="@color/red"
        app:helperTextEnabled="false"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/change_pwd_textInputEditText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="13"
            android:maxLines="1"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/change_pwd_textInputLayout3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_pwd_textInputLayout2"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="새로운 비밀번호 확인"
        app:hintTextColor="@color/blue"
        app:boxStrokeColor="@color/blue"
        app:counterEnabled="true"
        app:counterMaxLength="12"
        app:startIconDrawable="@drawable/password"
        app:errorEnabled="true"
        app:errorTextColor="@color/red"
        app:helperTextEnabled="false"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/change_pwd_textInputEditText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="13"
            android:maxLines="1"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.rey.material.widget.Button
        android:id="@+id/change_pwd_ok_btn"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/change_pwd_textInputLayout3"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_signin_btn"
        android:fontFamily="@font/gmarket_sans_bold"
        android:text="변경 완료"
        android:textColor="@color/white"
        android:textSize="20sp" />



</com.rey.material.widget.RelativeLayout>