<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Tutorial.Tutorial_Activity"
    android:background="@color/white">

    <include layout="@layout/main_activity" android:id="@+id/tutorial1_include_home"/>
    <include layout="@layout/post_new_fragment" android:id="@+id/tutorial1_include_new"/>
    <include layout="@layout/chat_list_fragment" android:id="@+id/tutorial1_include_chat"/>
    <include layout="@layout/user_fragment" android:id="@+id/tutorial1_include_user"/>

    <com.rey.material.widget.FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bb000000">

        <com.rey.material.widget.TextView
            android:id="@+id/tutorial1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/tutorial_text_box"
            android:drawablePadding="8dp"
            android:fontFamily="@font/gmarket_sans_medium"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="처음 방문해 주셨군요 !"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:drawableEndCompat="@drawable/click"/>

        <View
            android:id="@+id/tutorial_layout_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="55dp"
            android:background="@drawable/tutorial_layout_box"
            android:visibility="gone" />

        <View
            android:id="@+id/tutorial_menu_home"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom|start"
            android:background="@drawable/tutorial_layout_box"
            android:visibility="gone" />

        <View
            android:id="@+id/tutorial_layout_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tutorial_layout_box"
            android:visibility="gone" />

        <View
            android:id="@+id/tutorial_new_photo"
            android:layout_width="380dp"
            android:layout_height="380dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:background="@drawable/tutorial_layout_box"
            android:visibility="gone" />

        <View
            android:id="@+id/tutorial_new_photo_not"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="5dp"
            android:background="@drawable/tutorial_layout_box"
            android:visibility="gone" />

        <View
            android:id="@+id/tutorial_new_content"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginTop="130dp"
            android:background="@drawable/tutorial_layout_box"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/tutorial_layout_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="58dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/tutorial_circle"
            android:backgroundTint="@color/white"
            android:padding="7dp"
            android:src="@drawable/edit"
            android:visibility="gone"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/tutorial_layout_user_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="98dp"
            android:layout_marginTop="95dp"
            android:src="@drawable/arrow_left"
            android:visibility="gone"
            app:tint="@color/white" />

    </com.rey.material.widget.FrameLayout>



</com.rey.material.widget.RelativeLayout>
